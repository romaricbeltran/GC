{# Cette  est une extension de layout.html.twig, en ouvrant les blocks définis dans la  mère on peut spécifier le code #}

{% extends "CoreBundle::layout.html.twig" %}

{% block body %}

<div>
	<em><strong>Poèmes</strong></em>

	<ul>
		{% for poeme in poemes %}

		<li>
			<a href="{{ asset('bundles/rbecrit/textes/Poemes/' ~ poeme.chemin ~ '') }}" alt="{{ poeme.chemin }}"> {{ poeme.chemin }} </a>
		</li>

		{% endfor %}
	</ul>
</div>


<div>
	<em><strong>Ecrits Théoriques</strong></em>

	<ul>
		{% for ecrit in ecrits %}

		<li>
			<a href="{{ asset('bundles/rbecrit/textes/Ecrits_Theoriques/' ~ ecrit.chemin ~ '') }}" alt="{{ ecrit.chemin }}"> {{ ecrit.chemin }} </a>
		</li>

		{% endfor %}
	</ul>
</div>

<div>
	<em><strong>Romans et Nouvelles</strong></em>

	<ul>
		{% for roman in romans %}

		<li>
			<a href="{{ asset('bundles/rbecrit/textes/Romans_Nouvelles/' ~ roman.chemin ~ '') }}" alt="{{ roman.chemin }}"> {{ roman.chemin }} </a>
		</li>

		{% endfor %}
	</ul>
</div>

{% endblock %}
